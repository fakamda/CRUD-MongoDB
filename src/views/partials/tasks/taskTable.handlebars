<table>
    <thead>
        <tr>
            <th>N.</th>
            <th>Title</th>
            <th>Description</th>
            <th>Operations</th>
        </tr>
    </thead>

    <tbody>
        {{#each tasks}}
            <tr>
                {{!-- con index muestra el indice del mismo array --}}
                <td>{{@index}}</td> 
                <td>{{title}}</td>
                <td>{{description}}</td>
                <td>
                    {{!-- CONDICIONAL PARA MOSTRAR UNO U OTRO EN BASE AL ESTADO --}}
                    {{#if done}}
                        <a href="/tasks/{{_id}}/toggleDone">Undone</a> 
                    {{else}}
                        <a href="/tasks/{{_id}}/toggleDone">Done</a>
                    {{/if}}

                    <a href="/tasks/{{_id}}/edit">Update</a>
                    <a href="/tasks/{{_id}}/delete">Delete</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>