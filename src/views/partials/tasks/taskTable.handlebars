<table>
    <thead>
        <tr>
            <th>N.</th>
            <th>Title</th>
            <th>Description</th>
            <th>Operations</th>
        </tr>
    </thead>

    <tbody>
        {{#each tasks}}
            <tr>
                {{!-- con index muestra el indice del mismo array --}}
                <td>{{@index}}</td> 
                <td>{{title}}</td>
                <td>{{description}}</td>
                <td>
                    <button>Done</button>
                    <button>Edit</button>
                    <button>Delete</button>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>