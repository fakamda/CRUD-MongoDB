{{#if tasks}}

<table class="table table-bordered table-hover table-dark">
    <thead>
        <tr>
            <th>N.</th>
            <th>Title</th>
            <th>Description</th>
            <th>Operations</th>
        </tr>
    </thead>

    <tbody>
        {{#each tasks}}
            <tr>
                {{!-- con index muestra el indice del mismo array --}}
                <td>{{@index}}</td> 
                <td>{{title}}</td>
                <td>{{description}}</td>
                <td>
                    {{!-- CONDICIONAL PARA MOSTRAR UNO U OTRO EN BASE AL ESTADO --}}
                    {{#if done}}
                        <a href="/tasks/{{_id}}/toggleDone" class="btn btn-secondary btn-sm">Undone</a> 
                    {{else}}
                        <a href="/tasks/{{_id}}/toggleDone" class="btn btn-success btn-sm">Done</a>
                    {{/if}}

                    <a href="/tasks/{{_id}}/edit" class="btn btn-info btn-sm">Update</a>
                    <a href="/tasks/{{_id}}/delete" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table> 

 {{else}}
    <div class="container d-flex flex-column align-items-center justify-content-center p-4 text-white">
        <h1>No Tasks</h1>
        <img src="/icons/gato.avif" alt="michi" class="w-75">
    </div>

{{/if}}